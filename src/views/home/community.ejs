<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head') %>
</head>
<body>

<%- include('../partials/nav') %>

<!-- Start Featured Product -->
<section class="bg-light">
    <div class="container py-5">
        <div class="row py-3">
            <div class="d-flex justify-content-between">
                <h4 class="h4">곽곽 커뮤니티</h4>
<!--                <form action="/search" method="post" class="d-flex col-3">-->
<!--                    <input type="search" id="search" class="form-control" />-->
<!--                    <button type="button" class="btn btn-primary">-->
<!--                        <i class="fas fa-search"></i>-->
<!--                    </button>-->
<!--                </form>-->
            </div>
            <div class="d-flex my-2">
<!--                <a class="nav-link px-0 pe-3 text-black" href="#">인기</a>-->
<!--                <a class="nav-link px-0 pe-3 text-black" href="#">최신</a>-->
                <div class="btn-group ms-auto">
                    <div class="dropdown show mx-2">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            카테고리
                        </a>
                        <div class="dropdown-menu" id="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="/community">전체</a>
                            <a class="dropdown-item" href="/community?category=Free">자유</a>
                            <a class="dropdown-item" href="/community?category=Question">질의응답</a>
                            <a class="dropdown-item" href="/community?category=Study">스터디</a>
                        </div>
                    </div>
                    <button class="btn btn-primary"><a href="/write" class="m-0 p-0 text-white text-decoration-none">글쓰기</a></button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mx-5">
        <% posts.forEach(function(element,index){ %>
        <div class="col-12 col-md-4 mb-4">
            <div class="card h-80 px-3" style="display:block">
                <a href="/post/<%= element.id %> "class="card-body text-decoration-none text-dark mx-3">
                    <h2><%= element.title %></h2>
                    <h3 class="card-text pt-3" style="text-overflow:ellipsis; overflow: hidden; white-space:nowrap">
                        <%= element.content %>
                    </h3>
                    <p class="text-sm pt-3"><span><%= element.createdAt %></span></p>
                    <ul class="list-unstyled d-flex mb-0">
                        <li class="me-auto py-2"><%= element.author.nickname %></li>
                        <li class="p-2">댓글(<span>
                                <%= element.comment.length %>
                            </span>)</li>
                        <li class="p-2">❤(<span><%= element.like.length %></span>)</li>
                    </ul>
                </a>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
</section>
<!-- End Featured Product -->

<!-- Start Script -->
<script src="/js/jquery-1.11.0.min.js" th:src="@{/js/jquery-1.11.0.min.js}"></script>
<script src="/js/jquery-migrate-1.2.1.min.js" th:src="@{/js/jquery-migrate-1.2.1.min.js}"></script>
<script src="/js/bootstrap.bundle.min.js" th:src="@{/js/bootstrap.bundle.min.js}"></script>
<script src="/js/templatemo.js" th:src="@{/js/templatemo.js}"></script>
<script src="/js/custom.js" th:src="@{/js/custom.js}"></script>
<script>
const button = document.querySelector('#dropdownMenuLink');

button.addEventListener('click', () => {
const dropdown = document.querySelector('#dropdown-menu');
    if(dropdown.style.display == 'block'){
        dropdown.style.display = '';
    }
    else {
        dropdown.style.display = 'block'
    }
});



</script>
<script src="/js/jquery-1.11.0.min.js" th:src="@{/js/jquery-1.11.0.min.js}"></script>
<script src="/js/jquery-migrate-1.2.1.min.js" th:src="@{/js/jquery-migrate-1.2.1.min.js}"></script>
<script src="/js/bootstrap.bundle.min.js" th:src="@{/js/bootstrap.bundle.min.js}"></script>
<script src="/js/templatemo.js" th:src="@{/js/templatemo.js}"></script>
<script src="/js/custom.js" th:src="@{/js/custom.js}"></script>
</body>

</html>